                    <DataGridTextColumn Header="授课数目" Width="*" Binding="{Binding coursecount}"/>
                    <DataGridTextColumn Header="科研成果数" Width="1.5*" Binding="{Binding papercount}"/>
                    <DataGridTextColumn Header="绩效分" Width="*" Binding="{Binding score}"/>
